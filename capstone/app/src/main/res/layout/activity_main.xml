<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnUserGetAsset"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/btn_shape"
        android:text="유저조회"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/btnUserTradeHistory"
        app:layout_constraintEnd_toStartOf="@+id/btnUserTransfer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUserTransfer"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/btn_shape"
        android:text="코인 전송"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/btnQR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnUserGetAsset"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUserTradeHistory"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/btn_shape"
        android:text="최근 기록"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnQR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUserGetAsset" />


    <Button
        android:id="@+id/btnQR"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/btn_shape"
        android:text="QR"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnUserTradeHistory"
        app:layout_constraintTop_toBottomOf="@+id/btnUserTransfer" />

</androidx.constraintlayout.widget.ConstraintLayout>